{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/handler.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/handler.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/handler.js"
    }
  ]
}
